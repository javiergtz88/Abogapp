<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mx.appco.appbogado">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:name="mx.appco.appbogado.AppLeyesApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_appbogado_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>

        <!-- "stateHidden" permite ocultar el teclado virtual hasta que el usuario clickee sobre un EditText -->
        <activity
            android:name="mx.appco.appbogado.MainScreenView"
            android:label="@string/app_name"
             >
        </activity>
        <!-- "stateHidden" permite ocultar el teclado virtual hasta que el usuario clickee sobre un EditText -->
        <activity
            android:name="mx.appco.appbogado.LoginView"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="stateHidden" >

            <!-- android:windowSoftInputMode="adjustResize|stateVisible" -->
        </activity>
        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name" />
        <activity
            android:name="mx.appco.appbogado.SplashScreenActivity"
            android:label="@string/title_activity_splash_screen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="mx.appco.appbogado.RegisterView"
            android:label="@string/title_activity_register_view" >
        </activity>
        <activity
            android:name="mx.appco.appbogado.PresentationView"
            android:label="@string/title_activity_presentation_view"
           >
        </activity>
        <activity
            android:name="mx.appco.appbogado.SearchSubview"
            android:label="@string/title_activity_search_subview"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="mx.appco.appbogado.PaymentView"
            android:label="@string/title_activity_payment_view" >
        </activity>
        <activity
            android:name="mx.appco.appbogado.MessageFormView"
            android:label="@string/title_activity_message_form_view"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
