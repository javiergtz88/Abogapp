<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@id/contenedor"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/blue_panel">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chatIconTextView"
            android:text="a"
            android:textColor="#ced0db"
            android:paddingLeft="16dp"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:layout_weight="1">

            <TextView style="@style/ChatUserFont"
                android:id="@+id/chatMessageNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="chatMessageNameTextView"
                android:textColor="#ced0db"
                android:layout_gravity="left" />

            <TextView style="@style/ChatDateFont"
                android:id="@+id/chatMessageTimeDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="chatMessageTimeDateTextView"
                android:textColor="#ced0db"
                android:layout_gravity="left" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="top|right"
            android:paddingTop="8dp"
            android:paddingRight="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@drawable/abc_btn_switch_to_on_mtrl_00012" />
        </LinearLayout>

    </LinearLayout>

    <TextView style="@style/ChatTextFont"
        android:id="@+id/chatMessageTextTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chatMessageTextTextView"
        android:textColor="#ced0db"
        android:padding="16dp" />

</LinearLayout>