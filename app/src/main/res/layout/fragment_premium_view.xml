<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" tools:context=".MainActivity$PlaceholderFragment"
    android:orientation="vertical"
    android:weightSum="100"
    android:paddingRight="8dip"
    android:paddingLeft="8dip"
    android:fillViewport="true"
    android:id="@+id/linear">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <TextView style="@style/TextColor"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/premium_credits_left_default"
            android:id="@+id/premiumCreditsLeftTextView"
            android:gravity="center"
            android:textSize="22sp"
            android:background="@drawable/border_premium_view"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:paddingTop="0dp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        /*

        <mx.appco.appbogado.JustifyTextView style="@style/TextColor"
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:text="@string/credits_description"
            android:id="@+id/premiumCreditsDescTextView"

            android:layout_marginTop="8dip"
            android:layout_marginLeft="7dp"
            android:paddingLeft="5dp" />*/
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">


        <TextView style="@style/MessageFormStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Cantidad"
            android:id="@+id/cantidadTextview"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <Spinner

            style="@android:style/Widget.Holo.Light.Spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:id="@+id/spinnerCreditsChoose"
            android:textColor="#000000"
            android:spinnerMode="dialog"
            android:focusable="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <!--android:fontFamily="sans-serif"-->

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/get_credits"
        android:id="@+id/premiumGetCreditsButton"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:background="@drawable/blue_panel"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:padding="10dp" />

</LinearLayout>
</ScrollView>