<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/imageView"
    android:background="@drawable/blue_panel"
    android:gravity="left"
    android:padding="10dip">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/leyes"
        android:layout_gravity="center_vertical">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Menu"
        android:text="Large Text"
        android:textColor="#fff1e3"
        android:id="@+id/mainListScenarioTitleTextView"
        android:layout_alignTop="@+id/logo"
        android:layout_toRightOf="@+id/logo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:lineSpacingMultiplier="1.1"
        android:layout_gravity="center_vertical"
        android:paddingLeft="8dp"
        android:layout_weight="1" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/drawer_close"
        android:id="@+id/logoright"
        android:layout_gravity="center_vertical" />


</LinearLayout>